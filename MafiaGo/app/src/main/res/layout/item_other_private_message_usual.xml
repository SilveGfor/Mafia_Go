<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="6.5dp"
            android:layout_weight="3"
            android:src="@drawable/arrow_bg2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_weight="6"
        android:background="@drawable/rounded_corner1">

        <TextView
            android:id="@+id/item_other_private_message_usual_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Android charting application xml ui design."
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_other_private_message_usual_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="4dp"
            android:text="16-00"
            android:textColor="#787878"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_other_private_message_usual_message" />

        <TextView
            android:id="@+id/itemMyPrivateMessageUsual_TV_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="8dp"
            android:text="изменено"
            android:textColor="#787878"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_other_private_message_usual_time"
            app:layout_constraintEnd_toStartOf="@+id/item_other_private_message_usual_time"
            app:layout_constraintTop_toTopOf="@+id/item_other_private_message_usual_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>