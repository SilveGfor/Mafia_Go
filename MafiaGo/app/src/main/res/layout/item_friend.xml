<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemFriend_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/lover_alive"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF0000"/>

    <TextView
        android:id="@+id/itemFriend_nick"
        android:layout_toRightOf="@+id/itemFriend_avatar"
        android:text="SilveGfor"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/itemFriend_IV_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_online"
        android:layout_toRightOf="@id/itemFriend_nick"
        android:layout_margin="5dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemFriend_CV_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_maniac"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/itemFriend_IV_on_off">

        <TextView
            android:id="@+id/itemFriend_TV_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Комната 1"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>