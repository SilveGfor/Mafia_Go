<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FragmentCreate">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/citizen"
                android:alpha="0.25"/>

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Создание комнаты"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fragmentCreateRoom_ET_room_name"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_below="@id/fragmentCreateRoom_TV_name_view"
                android:hint="Введите название комнаты"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_edit_text"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_num_users"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fragmentCreateRoom_ET_room_name"
                android:text="Колличество пользователей"
                android:textSize="15dp" />

            <SeekBar
                android:id="@+id/fragmentCreateRoom_SB_max_players"
                android:layout_marginTop="15dp"
                android:layout_below="@id/fragmentCreateRoom_TV_num_users"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="18"
                android:min="5"/>

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_max_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_alignBottom="@id/fragmentCreateRoom_SB_max_players"
                android:layout_toLeftOf="@id/fragmentCreateRoom_SB_max_players"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentCreateRoom_CV_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fragmentCreateRoom_SB_max_players"
                app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="62.5dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/citizen" />

                <CheckBox
                    android:id="@+id/fragmentCreateRoom_CB_doctor"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/fragmentCreateRoom_SB_max_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доктор"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentCreateRoom_CV_lover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fragmentCreateRoom_CV_doctor"
                app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="62.5dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/citizen" />

                <CheckBox
                    android:id="@+id/fragmentCreateRoom_CB_lover"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/fragmentCreateRoom_SB_max_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Любовница"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@drawable/round_button"
                android:text="Создать"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnExitCreateRoom"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_button"
                android:layout_toLeftOf="@id/btnCreate"
                android:layout_alignBaseline="@id/btnCreate"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>