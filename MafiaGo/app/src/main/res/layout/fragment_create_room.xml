<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FragmentCreate">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:alpha="0.80"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Создание комнаты"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fragmentCreateRoom_ET_room_name"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_below="@id/fragmentCreateRoom_TV_name_view"
                android:hint="Введите название комнаты"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:background="@drawable/round_edit_text"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_num_users"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/fragmentCreateRoom_ET_room_name"
                android:text="Колличество пользователей"
                android:textSize="15dp" />

            <org.florescu.android.rangeseekbar.RangeSeekBar
                android:id="@+id/fragmentCreateRoom_RSB_num_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:absoluteMaxValue="5"
                app:thumbDisabled="@drawable/ic_change"
                app:thumbNormal="@drawable/ic_exp"
                app:thumbPressed="@drawable/ic_money"
                app:alwaysActive="true"


                app:absoluteMinValue="20"
                android:layout_below="@id/fragmentCreateRoom_TV_num_users" />

            <GridView
                android:id="@+id/fragmentCreateRoom_GV_roles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"

                android:layout_margin="15dp"
                android:layout_below="@id/fragmentCreateRoom_RSB_num_users"
                android:layout_above="@id/fragmentCreateRoom_BTN_create_room"/>

            <TextView
                android:id="@+id/fragmentCreateRoom_TV_max_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_alignBottom="@id/fragmentCreateRoom_RSB_num_users"
                android:layout_toLeftOf="@id/fragmentCreateRoom_RSB_num_users"/>

            <Button
                android:id="@+id/fragmentCreateRoom_BTN_create_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@drawable/round_button"
                android:text="Создать"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/fragmentCreateRoom_BTN_exit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_button"
                android:layout_toLeftOf="@id/fragmentCreateRoom_BTN_create_room"
                android:layout_alignBaseline="@id/fragmentCreateRoom_BTN_create_room"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>