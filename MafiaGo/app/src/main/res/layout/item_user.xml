<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_dark_green"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Item_user_IV_role"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lover_alive" />

            <TextView
                android:id="@+id/ItemUser_voting_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/rounded_corner1"/>

            <ImageView
                android:id="@+id/Item_user_IV_Animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_lover"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Item_user_TV_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Item_user_IV_role"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="SilveGfor"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal" />
        </RelativeLayout>
</LinearLayout>