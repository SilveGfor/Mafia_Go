<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:background="@drawable/rounded_corner">

        <TextView
            android:id="@+id/item_my_private_message_answer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_my_private_message_answer_CV"
            android:text="Android charting application xml ui design."
            android:textColor="#000000"
            android:padding="10dp"/>

        <RelativeLayout
            android:id="@+id/item_my_private_message_answer_CV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/item_my_private_message_answer_time"
            android:background="@drawable/rounded_corner1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_my_private_message_answer_LL_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_my_private_message_answer_answer_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Vova_Vor"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/item_my_private_message_answer_answer_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@id/item_my_private_message_answer_answer_nick"
                        android:text="Кто ты?"
                        android:textColor="#000000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_my_private_message_answer_answer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="21-00"
                    android:padding="5dp"
                    android:textColor="#8F8F8F" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/itemMyPrivateMessageAnswer_IV_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_readed"
            android:layout_margin="5dp"
            android:layout_below="@+id/item_my_private_message_answer_CV"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/item_my_private_message_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16-00"
            android:textColor="#8F8F8F"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="6.5dp"
        android:layout_weight="1"
        android:src="@drawable/arrow_bg1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_weight="3"
        android:src="@drawable/ic_snow" />

</LinearLayout>