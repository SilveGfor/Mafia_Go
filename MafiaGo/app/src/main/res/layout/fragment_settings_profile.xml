<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/fragmentSettingsProfile_SV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentSettingsProfile_CV"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/card_background"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/fragmentSettingsProfile_IV_avatar"
                        app:layout_constraintTop_toTopOf="@+id/fragmentSettingsProfile_IV_avatar" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fragmentSettingsProfile_IV_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/sheriff_round"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="16dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/experience"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_IV_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/itemDailyTask_IV_prize" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="21dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/rang"
                        app:layout_constraintBottom_toBottomOf="@+id/itemDailyTask_IV_prize"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_TV_nick" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/gold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="@+id/imageView8" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/itemDailyTask_IV_prize"
                        app:layout_constraintStart_toEndOf="@+id/itemDailyTask_IV_prize"
                        app:layout_constraintTop_toTopOf="@+id/itemDailyTask_IV_prize" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Статус:"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_IV_avatar"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_IV_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_IV_avatar" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_money3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Цвет:"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_TV_money2"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_TV_money2"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_money2" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_rang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                        app:layout_constraintStart_toEndOf="@+id/imageView8"
                        app:layout_constraintTop_toTopOf="@+id/imageView8" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintStart_toEndOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView9" />

                    <ImageView
                        android:id="@+id/itemDailyTask_IV_prize"
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/money"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_IV_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_Spinner_color" />

                    <TextView
                        android:id="@+id/dialogYouHaveBeenBanned_TV_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="@+id/imageView7" />

                    <Spinner
                        android:id="@+id/fragmentSettingsProfile_Spinner_statuce"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragmentSettingsProfile_TV_money2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragmentSettingsProfile_TV_money2"
                        app:layout_constraintTop_toTopOf="@+id/fragmentSettingsProfile_TV_money2" />

                    <Spinner
                        android:id="@+id/fragmentSettingsProfile_Spinner_color"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragmentSettingsProfile_TV_money3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_Spinner_statuce"
                        app:layout_constraintTop_toTopOf="@+id/fragmentSettingsProfile_TV_money3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentSettingsProfile_CV2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/card_background"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_CV"
                app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_CV"
                app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_CV">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_statistic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Статистика"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_gamesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Сыграно игр 5"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_statistic" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_maxMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Макс число монет 78"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_gamesCount" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_maxExp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Макс число опыта 90"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_maxMoney" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_percentWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Процент побед 45%"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_maxExp" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_percentMafiaWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Побед мафии 67%"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_percentPeacefulWins" />

                    <TextView
                        android:id="@+id/fragmentSettingsProfile_TV_percentPeacefulWins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Побед мирных 45%"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_TV_percentWins" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/fragmentSettingsProfile_btn_changeAvatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_button"
                android:text="Сменить аватар"
                app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_CV2"
                app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_CV2"
                app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_CV2" />

            <Button
                android:id="@+id/fragmentSettingsProfile_btn_changePassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/grey_button"
                android:text="сменить пароль"
                app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_btn_changeNick"
                app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_btn_changeNick"
                app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_btn_changeNick" />

            <Button
                android:id="@+id/fragmentSettingsProfile_btn_changeNick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/grey_button"
                android:text="сменить ник"
                app:layout_constraintEnd_toEndOf="@+id/fragmentSettingsProfile_btn_changeAvatar"
                app:layout_constraintStart_toStartOf="@+id/fragmentSettingsProfile_btn_changeAvatar"
                app:layout_constraintTop_toBottomOf="@+id/fragmentSettingsProfile_btn_changeAvatar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>