<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentStudy_CL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_day">

    <ListView
        android:id="@+id/fragmentStudy_LV_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:divider="@null"
        android:dividerHeight="4dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentStudy_TV_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

    </ListView>

    <TextView
        android:id="@+id/fragmentStudy_TV_roomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Обучение"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/fragmentStudy_TV_timer"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_lines" />

    <TextView
        android:id="@+id/fragmentStudy_TV_mafiaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Мирных: 5"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentStudy_TV_timer" />

    <TextView
        android:id="@+id/fragmentStudy_TV_peacefulCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Мафий: 3"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentStudy_TV_mafiaCount"
        app:layout_constraintEnd_toStartOf="@+id/fragmentStudy_TV_mafiaCount" />

    <TextView
        android:id="@+id/fragmentStudy_TV_playersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Игроков: 6"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentStudy_TV_roomName" />

    <TextView
        android:id="@+id/fragmentStudy_TV_playersMinMaxInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="комната от 5 до 20"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/fragmentStudy_TV_peacefulCount"
        app:layout_constraintStart_toEndOf="@+id/fragmentStudy_TV_playersCount"
        app:layout_constraintTop_toTopOf="@+id/fragmentStudy_TV_playersCount" />

    <TextView
        android:id="@+id/fragmentStudy_TV_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="\u221e"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/fragmentStudy_listUsers"
        android:layout_width="0dp"
        android:layout_height="240dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:horizontalSpacing="5dp"
        android:numColumns="5"
        android:scrollbars=""
        android:verticalSpacing="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentStudy_TV_peacefulCount" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/fragmentStudy_listUsers"
        app:layout_constraintTop_toBottomOf="@+id/fragmentStudy_listUsers" />

    <ImageView
        android:id="@+id/fragmentStudy_ic_doctor"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/ic_doctor" />

    <ImageView
        android:id="@+id/fragmentStudy_ic_sheriff"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/fragmentStudy_ic_doctor"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/ic_sheriff" />

    <ImageView
        android:id="@+id/fragmentStudy_ic_lover"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/fragmentStudy_ic_sheriff"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/ic_lover" />

    <ImageView
        android:id="@+id/fragmentStudy_ic_bodyguard"
        android:layout_width="19dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/fragmentStudy_ic_lover"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/ic_bodyguard" />

    <ImageView
        android:id="@+id/fragmentStudy_ic_poisoner"
        android:layout_width="13dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/fragmentStudy_ic_bodyguard"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:srcCompat="@drawable/ic_poisoner" />

    <TextView
        android:id="@+id/fragmentStudy_TV_dayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="лобби"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentStudy_LV_chat"
        app:layout_constraintEnd_toEndOf="@+id/fragmentStudy_listUsers"
        app:layout_constraintTop_toBottomOf="@+id/fragmentStudy_listUsers" />

    <TextView
        android:id="@+id/fragmentStudy_TV_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/green_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Далее"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fragmentStudy_listUsers"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>