<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_message_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_snow"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/mesNick"
        android:text="SilveGfor"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_message_avatar"
        android:textStyle="normal"
        app:reflectionColor="#f00"/>

    <TextView
        android:id="@+id/mesTime"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="21:00" />

    <TextView
        android:id="@+id/mesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mesNick"
        android:layout_toRightOf="@id/item_message_avatar"
        android:layout_marginTop="5dp"
        android:text="Однако здравствуйте"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#999999"
        android:textSize="16sp" />

</RelativeLayout>