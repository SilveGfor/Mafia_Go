<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrgmMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_menu"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentMenuMenu_CV_info"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:contentPadding="15dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txtNick"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SilveGfor"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>





    <Button
        android:id="@+id/btnGame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:padding="21dp"
        android:drawableLeft="@drawable/ic_play"
        android:background="@drawable/round_button"
        android:drawableStart="@drawable/ic_play" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:background="@drawable/round_button"
        android:text="Профиль"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnTools"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/btnProfile"
        android:layout_alignTop="@id/btnProfile"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Настройки"
        android:textColor="@color/colorWhite"
        android:background="@drawable/round_button" />

    <Button
        android:id="@+id/btnRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/btnProfile"
        android:layout_alignTop="@id/btnProfile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Правила"
        android:textColor="@color/colorWhite"
        android:background="@drawable/round_button" />

    <LinearLayout
        android:layout_alignParentBottom="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bubble_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_button"
            android:text="Счётчик мышек"
            android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/count_bubble"
                android:text="00"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/MafGo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mafiago" />


</RelativeLayout>