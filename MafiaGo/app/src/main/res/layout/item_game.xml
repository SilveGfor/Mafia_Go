<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemGame_TV_roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комната 1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemGame_TV_roomState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="идёт набор в комнату"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemGame_TV_roomName" />

    <TextView
        android:id="@+id/itemGame_TV_minMaxPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="от 3 до 8 игроков"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemGame_TV_roomState"
        app:layout_constraintStart_toEndOf="@+id/itemGame_TV_roomState" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="в комнате:"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemGame_TV_roomState" />

    <TextView
        android:id="@+id/itemGame_TV_playersInRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="сейчас: 1"
        android:textColor="@color/notActiveText"
        app:layout_constraintBottom_toTopOf="@+id/itemGame_TV_minMaxPlayers"
        app:layout_constraintEnd_toStartOf="@+id/itemGame_btn_players"
        app:layout_constraintStart_toEndOf="@+id/itemGame_TV_roomName" />

    <Button
        android:id="@+id/itemGame_btn_players"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/grey_button"
        android:padding="10dp"
        android:text="список игроков"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>